<div class="contents row">
  <%= form_tag("/courses/#{@course.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <form>
      <div class="form-group">
        <label for="タイトル">タイトル</label>
        <input type="text" name="title" value="<%= @course.title %>">
      </div>
      <div class="form-group">
        <label for="画像">画像</label>
        <input type="text" name="image" value="<%= @course.image %>">
      </div>
      <div class="form-group">
        <label for="テキスト">テキスト</label>
        <textarea name="text" cols="30" rows="10"><%= @course.text %></textarea>
      </div>
      <div class="form-group">
        <label for="都道府県">都道府県</label>
        <input type="string" name="area" value="<%= @course.area %>">
      </div>
      <div class="form-group">
        <input type="submit" value="送信">
      </div>
    </form>
  <% end %>
</div>
